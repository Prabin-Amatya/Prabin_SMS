@model Prabin_SMS.Models.Entity.Student

@{
    ViewData["Title"] = "Register";
}

﻿@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager

<h1>@ViewData["Title"]</h1>
<h2>Create a new account.</h2>
<hr />


<form action="AddEdit" method="post">
    <div class="row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-4">
            <div class="form-floating">
                <input asp-for="FirstName" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="FirstName"></label>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4">
            <div class="form-floating">
                <input asp-for="LastName" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="LastName"></label>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4">
            <div class="form-floating">
                <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Email"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-4">
            <div class="form-floating">
                <input asp-for="Address" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Address"></label>
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
        </div>

        <div class="col-4">
            <div class="form-floating">
                <input asp-for="Batch" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Batch"></label>
                <span asp-validation-for="Batch" class="text-danger"></span>
            </div>
        </div>

        <div class="col-4">
            <div class="form-floating">
                <input asp-for="PhoneNumber" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="PhoneNumber"></label>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-4">
            <div class="form-floating">
                <select asp-for="SectionId" class="form-control" autocomplete="username" aria-required="true" asp-items="@(Html.GetEnumSelectList<Prabin_SMS.Models.Enum.SectionEnum>())">
                    <option disabled selected value="null">--CHOOSE</option>
                </select>
                <label asp-for="SectionId"></label>
                <span asp-validation-for="SectionId" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4">
            <div class="form-floating">
                <input asp-for="Semester" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Semester"></label>
                <span asp-validation-for="Semester" class="text-danger"></span>
            </div>
        </div>
        <div class="col-4">
                <div class="form-group">
                    <input class="form-check-input" type="checkbox" asp-for="IsEnrolled">
                    <label class="form-check-label" asp-for="IsEnrolled">

                    </label>
                    <span asp-validation-for="IsEnrolled" class="text-danger"></span>
                </div>
        </div>
    </div>
    <div class="row">
        <div class="col-4">
            <div class="form-floating">
                <select asp-for="DegreeId" class="form-control" autocomplete="username" aria-required="true" asp-items="@(new SelectList(ViewBag.DegreeList,"Id","DegreeName"))">
                    <option disabled selected value="null">--CHOOSE</option>
                </select>
                <label asp-for="DegreeId"></label>
                <span asp-validation-for="DegreeId" class="text-danger"></span>
            </div>
        </div>
    </div>

    @if (User.IsInRole("ADMIN"))
    {
        <div class="row">
            <div class="col-6">
            <button asp-action="Index" type="submit" class="w-100 btn btn-lg btn-primary">Back</button>
        </div>
        <div class="col-6">
            <button type="submit" class="w-100 btn btn-lg btn-primary float-end">Register</button>
        </div>
    </div>
    }
</form>




@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}