@model Prabin_SMS.Models.Entity.Student

@{
    ViewData["Title"] = "Student";
}

﻿@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager

<h1>@ViewData["Student"]</h1>



<form action="AddEdit" method="post" enctype="multipart/form-data">
    <div class="row">
        <div class="col-3"> 
            <h4 style="padding-top:6%">Add Student To</h4>
        </div>
    
        <div class="col-4">
            <div class="form-floating">
                <select asp-for="DegreeId" class="form-control" autocomplete="username" aria-required="true" asp-items="@(new SelectList(ViewBag.DegreeList,"Id","DegreeName"))">
                    <option disabled selected value="null">--CHOOSE--</option>
                </select>
                <label>Degree</label>
                <span asp-validation-for="DegreeId" class="text-danger"></span>
            </div>
        </div>
    </div>      
        <hr />
   
    <input asp-for="Id" id="Id" hidden />
    <div class="row">
        <div class="col-4">
            <div class="form-floating">
                <input asp-for="FirstName" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="FirstName"></label>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class="form-floating">
                        <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Email"></label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <div class="form-floating">
                        <input asp-for="Batch" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Batch"></label>
                        <span asp-validation-for="Batch" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <div class="form-floating">
                        <select asp-for="SectionId" class="form-control" autocomplete="username" aria-required="true" asp-items="@(Html.GetEnumSelectList<Prabin_SMS.Models.Enum.SectionEnum>())">
                            <option disabled selected value="null">--CHOOSE</option>
                        </select>
                        <label asp-for="SectionId"></label>
                        <span asp-validation-for="SectionId" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-4">
            <div class="form-floating">
                <input asp-for="LastName" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="LastName"></label>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-12">
                    <div class="form-floating">
                        <input asp-for="Address" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Address"></label>
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <div class="form-floating">
                        <input asp-for="PhoneNumber" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="PhoneNumber"></label>
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div>
                <div class="col-12">
                    <div class="form-floating">
                        <input asp-for="Semester" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Semester"></label>
                        <span asp-validation-for="Semester" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-4">
            <label>Photo</label>
            <div class="image-uploaded">
                @if (!string.IsNullOrEmpty(Model?.studenturl))
                {
                    <img src="/@Model?.studenturl" id="Stuphoto" class="Photo img-thumbnail align-center" style="height:200px;width:180px;" />
                }
                else
                {
                    <img src="~/images/NoPhoto.png" id="NoStuPhoto" class="NoPhoto img-thumbnail align-center " style="height:200px;width:180px;">
                }

            </div>
            <div class="row">
                <div class="input-group input-file mt-1">
                    <label class="input-group-btn ">
                        <span class="btn btn-large btn-primary">
                            Upload Photo
                            <input asp-for="studentPhoto" class="form-control" onchange="readURL(this, '@Model?.studenturl','StuPhoto','NoStuPhoto' )" style="display: none;" />
                            <span asp-validation-for="studentPhoto" class="text-danger"></span>
                        </span>
                    </label>
                </div>
            </div>
        </div>
        
    </div>       
        
            
        
            
    
       

    

    

    <div>
        <div class="row">

            <div class="col-4">
                <label>Transcript</label>
                <div class="image-uploaded">
                    @if (!string.IsNullOrEmpty(Model?.transcriptPhotoUrl))
                    {
                        <img src="/@Model?.transcriptPhotoUrl" id="TransPhoto" class="Photo img-thumbnail align-center" style="height:200px;width:180px;" />
                    }
                    else
                    {
                        <img src="~/images/NoPhoto.png" id="NoTransPhoto" class="NoPhoto img-thumbnail align-center " style="height:200px;width:180px;">
                    }

                </div>

                <div class="input-group input-file mt-1">
                    <label class="input-group-btn ">
                        <span class="btn btn-large btn-primary">
                            Upload Photo
                            <input asp-for="transcriptPhoto"  class="form-control" onchange="readURL(this, '@Model?.transcriptPhotoUrl', 'TransPhoto', 'NoTransPhoto')" style="display: none;" />
                            <span asp-validation-for="transcriptPhoto"  class="text-danger"></span>
                        </span>
                    </label>
                </div>
            </div>
            
            <div class="col-4">
                <label>Citizenship</label>
                <div class="image-uploaded">
                    @if (!string.IsNullOrEmpty(Model?.citizenshipPhotoUrl))
                    {
                        <img src="/@Model?.citizenshipPhotoUrl" id="CitizenPhoto" class="Photo img-thumbnail align-center" style="height:200px;width:180px;" />
                    }
                    else
                    {
                        <img src="~/images/NoPhoto.png" id="NoCitizenPhoto" class="NoPhoto img-thumbnail align-center " style="height:200px;width:180px;">
                    }

                </div>

                <div class="input-group input-file mt-1">
                    <label class="input-group-btn ">
                        <span class="btn btn-large btn-primary">
                            Upload Photo
                            <input asp-for="citizenshipPhoto" class="form-control" onchange="readURL(this, '@Model?.citizenshipPhotoUrl', 'CitizenPhoto','NoCitizenPhoto')" style="display: none;" />
                            <span asp-validation-for="citizenshipPhoto" class="text-danger"></span>
                        </span>
                    </label>
                </div>
            </div>
        </div>
        <div class="col-4">
            <div class="form-group">
                <input class="form-check-input" type="checkbox" asp-for="IsEnrolled">
                <label class="form-check-label" asp-for="IsEnrolled">

                </label>
                <span asp-validation-for="IsEnrolled" class="text-danger"></span>
            </div>
        </div>
    </div>
    

    @if (User.IsInRole("ADMIN"))
    {
        <div class="row">
            <div class="col-6">
                <a asp-action="Index" class="w-100 btn btn-lg btn-primary">Back</a>
        </div>
        <div class="col-6">
            <button type="submit" class="w-100 btn btn-lg btn-primary float-end">Register</button>
        </div>
    </div>
    }
</form>




@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function readURL(input, url, imgID, noImgID) {
            debugger;
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                var $imgElement = $('#' + imgID);
                var $noImgElement = $('#' + noImgID);

                if (url == '') {
                    reader.onload = function (e) {
                        $noImgElement.attr('src', e.target.result);
                    }
                }
                else {
                    reader.onload = function (e) {
                        $imgElement.attr('src', e.target.result);
                    }
                }
                reader.readAsDataURL(input.files[0]);
            }
        }

    </script>
}