@model IEnumerable<Prabin_SMS.Models.Entity.Course>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager

<h2>User Management</h2>
<div class="row">
    <div class="col-12">
        <a class="btn btn-primary float-end" asp-action="AddEdit">Add</a>
    </div>
</div>


<h3 class="align-content-center">Courses</h3>
<div class="form-outline" data-mdb-input-init>
    <input type="search" id="form1" class="form-control" placeholder="Type query" aria-label="Search" />
</div>
<div class="row">
    <div class="col-12">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>S.N.</th>
                    <th>
                        Course Name
                    </th>
                    <th>
                        Course Description
                    </th>
                    <th>
                        Credit Hours
                    </th>
                    <th>
                        Full Marks
                    </th>
                    <th>
                        Optional
                    </th>
                    <th>
                        Active
                    </th>
                    @if (SignInManager.IsSignedIn(User) && User.IsInRole("ADMIN"))
                    {
                        <th></th>
                    }
                    
                </tr>
            </thead>
            <tbody>
                @{
                    int count = 1;
                }
                @foreach (var items in Model)
                {
                    <tr>
                        <td>
                            @count
                        </td>
                        <td>
                            @items.CourseName
                        </td>
                        <td>
                            @items.CourseDescription
                        </td>
                        <td>
                            @items.CreditHours
                        </td>
                        <td>
                            @items.FullMarks
                        </td>
                        
                        <td>
                            @if (items.IsActive == true)
                            {
                                @:True
                            }
                            else
                            {
                                @:False
                            }

                        </td>
                        @if (SignInManager.IsSignedIn(User) && User.IsInRole("ADMIN"))
                        {
                            <td>
                                <a class="btn btn-primary float-end" asp-action="AddEdit" asp-route-id="@items.Id">Edit</a>
                            </td>
                        }
                    </tr>
                    count = count + 1;
                }
            </tbody>
        </table>
    </div>
</div>

